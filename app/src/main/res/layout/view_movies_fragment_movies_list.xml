<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="270dp"
    android:layout_marginStart="16dp">

    <ImageView
        android:id="@+id/item_movie_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:background="@drawable/shape_rounded_corner_movies_image_movies_list_fragment"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/item_movie_image"
        tools:text="Spider Man, No Way Home" />


    <ImageView
        android:id="@+id/item_movie_adult_imageview"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginVertical="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_adult"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/item_movie_name"
        app:layout_constraintTop_toBottomOf="@id/item_movie_name" />

</androidx.constraintlayout.widget.ConstraintLayout>